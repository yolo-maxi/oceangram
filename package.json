{
  "name": "oceangram",
  "displayName": "Oceangram",
  "description": "Telegram + AI agent cockpit for OpenClaw users. Chat, kanban, and agent status â€” all in your editor.",
  "version": "0.7.0",
  "publisher": "oceangram",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "extensionKind": [
    "ui"
  ],
  "contributes": {
    "commands": [
      {
        "command": "oceangram.openComms",
        "title": "Oceangram: Open Comms"
      },
      {
        "command": "oceangram.openKanban",
        "title": "Oceangram: Open Kanban"
      },
      {
        "command": "oceangram.openResources",
        "title": "Oceangram: Open Resources"
      },
      {
        "command": "oceangram.openAgent",
        "title": "Oceangram: Open Agent Status"
      },
      {
        "command": "oceangram.telegramLogin",
        "title": "Oceangram: Telegram Login / Switch Account"
      },
      {
        "command": "oceangram.quickPick",
        "title": "Oceangram: Quick Pick"
      },
      {
        "command": "oceangram.exportChat",
        "title": "Oceangram: Export Chat"
      }
    ],
    "keybindings": [
      {
        "command": "oceangram.openComms",
        "key": "ctrl+shift+1",
        "mac": "cmd+shift+1"
      },
      {
        "command": "oceangram.openKanban",
        "key": "ctrl+shift+2",
        "mac": "cmd+shift+2"
      },
      {
        "command": "oceangram.openResources",
        "key": "ctrl+shift+3",
        "mac": "cmd+shift+3"
      },
      {
        "command": "oceangram.openAgent",
        "key": "ctrl+shift+4",
        "mac": "cmd+shift+4"
      },
      {
        "command": "oceangram.quickPick",
        "key": "ctrl+shift+o",
        "mac": "cmd+shift+o"
      }
    ],
    "configuration": {
      "title": "Oceangram",
      "properties": {
        "oceangram.kanbanProjectsPath": {
          "type": "string",
          "default": "/home/xiko/kanban-projects",
          "description": "Absolute path on the remote server to the kanban markdown files directory."
        },
        "oceangram.projectsJsonPath": {
          "type": "string",
          "default": "/home/xiko/kanban-app/data/projects.json",
          "description": "Absolute path on the remote server to the projects.json file."
        },
        "oceangram.openclawConfigPath": {
          "type": "string",
          "default": "/home/xiko/.openclaw",
          "description": "Absolute path on the remote server to the .openclaw config directory."
        },
        "oceangram.briefsPath": {
          "type": "string",
          "default": "/home/xiko/clawd/memory/projects",
          "description": "Absolute path on the remote server to the project briefs directory."
        },
        "oceangram.memoryPath": {
          "type": "string",
          "default": "/home/xiko/clawd/memory",
          "description": "Absolute path on the remote server to the memory directory."
        },
        "oceangram.remoteHome": {
          "type": "string",
          "default": "/home/xiko",
          "description": "Home directory on the remote server (used to resolve ~ paths)."
        },
        "oceangram.gatewayPort": {
          "type": "number",
          "default": 4380,
          "description": "Port of the OpenClaw gateway (access via SSH port forwarding)."
        },
        "oceangram.daemonPort": {
          "type": "number",
          "default": 7777,
          "description": "Port for the Oceangram Telegram daemon (auto-spawned on activate)."
        },
        "oceangram.theme": {
          "type": "string",
          "default": "telegram-dark",
          "enum": [
            "telegram-dark",
            "auto"
          ],
          "enumDescriptions": [
            "Use the bundled Telegram Dark theme",
            "Follow the current VS Code theme"
          ],
          "description": "UI theme for Oceangram panels."
        },
        "oceangram.notifications.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable VS Code notifications for incoming messages."
        },
        "oceangram.notifications.sound": {
          "type": "boolean",
          "default": false,
          "description": "Play a sound for high-priority notifications (direct mentions)."
        }
      }
    },
    "themes": [
      {
        "label": "Telegram Dark",
        "uiTheme": "vs-dark",
        "path": "./themes/telegram-dark.json"
      }
    ]
  },
  "scripts": {
    "compile": "node esbuild.mjs",
    "watch": "tsc -watch -p ./",
    "lint": "eslint src --ext ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "build": "node esbuild.mjs"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/vscode": "^1.85.0",
    "@types/ws": "^8.18.1",
    "@vitest/coverage-v8": "^4.0.18",
    "esbuild": "^0.27.3",
    "typescript": "^5.3.0",
    "vitest": "^4.0.18"
  },
  "packageManager": "pnpm@9.15.4",
  "dependencies": {
    "oceangram-daemon": "file:../oceangram-daemon",
    "shiki": "^3.22.0",
    "telegram": "^2.26.22",
    "ws": "^8.19.0"
  },
  "icon": "icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/oceangram/oceangram"
  },
  "license": "MIT",
  "keywords": [
    "telegram",
    "openclaw",
    "ai",
    "agent",
    "kanban",
    "chat"
  ]
}
