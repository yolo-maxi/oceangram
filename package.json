{
  "name": "oceangram",
  "displayName": "Oceangram",
  "description": "Telegram + AI agent cockpit for OpenClaw users. Chat, kanban, and agent status â€” all in your editor.",
  "version": "0.3.0",
  "publisher": "oceangram",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "oceangram.openComms",
        "title": "Oceangram: Open Comms"
      },
      {
        "command": "oceangram.openKanban",
        "title": "Oceangram: Open Kanban"
      },
      {
        "command": "oceangram.openResources",
        "title": "Oceangram: Open Resources"
      },
      {
        "command": "oceangram.openAgent",
        "title": "Oceangram: Open Agent Status"
      },
      {
        "command": "oceangram.telegramLogin",
        "title": "Oceangram: Telegram Login / Switch Account"
      }
    ],
    "keybindings": [
      {
        "command": "oceangram.openComms",
        "key": "ctrl+shift+1",
        "mac": "cmd+shift+1"
      },
      {
        "command": "oceangram.openKanban",
        "key": "ctrl+shift+2",
        "mac": "cmd+shift+2"
      },
      {
        "command": "oceangram.openResources",
        "key": "ctrl+shift+3",
        "mac": "cmd+shift+3"
      },
      {
        "command": "oceangram.openAgent",
        "key": "ctrl+shift+4",
        "mac": "cmd+shift+4"
      }
    ],
    "themes": [
      {
        "label": "Telegram Dark",
        "uiTheme": "vs-dark",
        "path": "./themes/telegram-dark.json"
      }
    ]
  },
  "scripts": {
    "compile": "node esbuild.mjs",
    "watch": "tsc -watch -p ./",
    "lint": "eslint src --ext ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "build": "node esbuild.mjs"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/vscode": "^1.85.0",
    "@vitest/coverage-v8": "^4.0.18",
    "esbuild": "^0.27.3",
    "typescript": "^5.3.0",
    "vitest": "^4.0.18"
  },
  "packageManager": "pnpm@9.15.4",
  "dependencies": {
    "shiki": "^3.22.0",
    "telegram": "^2.26.22"
  },
  "icon": "icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/oceangram/oceangram"
  },
  "license": "MIT",
  "keywords": [
    "telegram",
    "openclaw",
    "ai",
    "agent",
    "kanban",
    "chat"
  ]
}
